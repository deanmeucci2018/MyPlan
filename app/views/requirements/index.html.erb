

<h1>Requirements</h1>
<%= link_to 'New Requirement', new_requirement_path %>
<table>
  <thead>
    <tr>
      <th>Requirement name</th>
      <th>Requirement type</th>
      <th>Courses towards requirement</th>
      <th>Interest</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requirements.each do |requirement| %>
      <tr>
        <td><%= requirement.requirement_name %></td>
        <td><%= requirement.requirement_type %></td>
        <td><%= requirement.courses_towards_requirement %></td>
        <td><%= requirement.interest.interest_name + ' ' + requirement.interest.interest_type %></td>
        <td><%= link_to 'Show', requirement %></td>
        <td><%= link_to 'Edit', edit_requirement_path(requirement) %></td>
        <td><%= link_to 'Destroy', requirement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Requirement', new_requirement_path %>
