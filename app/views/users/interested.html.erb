<%= form_for(@user) do |f| %>
    
<h1 style="text-align:center">Select Interests You Are Pursuing</h1> 

    <div class="field" id="smallTable">
    <%= hidden_field_tag "user[interest_ids][]", nil %>
    <% @interest_order.each do |department, available| %>
    <br>
        <table class="blueTable">
          <thead>
            <tr>
              <th colspan="2"style ="text-align:center"> <%= department[0] %></th>
            </tr>
            <tr>
              <th>Name of Interest</th>
              <th>Select</th>
            </tr>
      </thead>

      
        <% for interest in available %>
          <tr>
            <td style="width: 0px"><%= label_tag dom_id(interest), interest.interest_name + ' ' + interest.interest_type, style: "text-align:center" %></td>
            <td> <%= check_box_tag "user[interest_ids][]", interest.id, @user.interest_ids.include?(interest.id), id: dom_id(interest), style: "text-align:center" %></td>
          </tr>
        <% end %>
            
    <% end %>        
      </table>
  </div>
  
  
    
		<div style = "width:50%; margin-right:25%;margin-left:25%; text-align:center"><%= f.submit   "Add Interests", class: "btn btn-primary"%></div>
		<br>
<% end %>