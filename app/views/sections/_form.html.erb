<%= form_with(model: section, local: true) do |form| %>
  <% if section.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(section.errors.count, "error") %> prohibited this section from being saved:</h2>

      <ul>
      <% section.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
<div class = "form-style-2" style="margin-left:35%; margin-right:25%">
  <div class="field" id="time">
    <%= form.label :Section_Time %>
    <%= form.time_select :start_time, id: :section_start_time %> - <%= form.time_select :end_time, id: :section_end_time %>
  </div>


  <div class="field">
    <%= form.label :professor %>
    <%= form.text_field :professor, id: :section_professor %>
  </div>
  <br>
  <div class="field">
    <%= form.label :section_letter %>
    <%= form.text_field :section_letter, id: :section_section_letter %>
  </div>
  <br>
  <div class="field">
    <%= form.label :semester %>
    <%= form.select(:semester, [['Fall', "Fall"], ['Winter', "Winter"], ['Spring', "Spring"], ['Summer', "Summer"]]) %>
		<br>
  </div>
  <br>
  <div class="field">
    <%= form.label :Year %>
    <%= form.number_field :section_year, id: :section_section_year %>
  </div>
  <br>
  <div class="field">
    <%= form.label :Days_Enter_by_abbreviation_MWF_TR %>
    <%= form.text_field :section_days, id: :section_section_days %>
  </div>
  <br>

  <div class="field">
    <%= form.label :course_name %>
    <%= form.grouped_collection_select :course_id, Department.order(:dep_short_name), :courses, :dep_short_name, :id, :course_full_name, include_blank: true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
</div>
<% end %>



